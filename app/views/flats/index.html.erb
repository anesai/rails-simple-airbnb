<div class="container-fluid d-flex flex-column pb-1 mb-2">
  <nav class="navbar navbar-light bg-light">
    <a href="/flats" class="d-flex text-dark text-decoration-none">Simple Airbnb</a>
    <a class="btn btn-outline-primary float-right" href="/flats/new">Add flat</a>
  </nav>
</div>

<p style="color: green"><%= notice %></p>

<h1>Flats</h1>

<div id="flats">
  <% @flats.each do |flat| %>
    <%= render flat %>
    <p>
      <%= link_to "More info", flat %> |
      <%= link_to "Edit", edit_flat_path(flat) %> |
      <%= link_to "Delete",
        flat_path(flat),
        method: :delete,
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </p>
  <% end %>
</div>
